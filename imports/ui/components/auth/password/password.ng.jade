md-content(layout='row', layout-align='center start', layout-fill, layout-margin)
  md-whiteframe.md-whiteframe-3dp(layout='column', flex='', flex-md='50', flex-lg='50', flex-gt-lg='33', layout-fill)
    md-toolbar.md-primary.md-tall(layout='column', layout-align='end', layout-fill)
      .md-toolbar-tools.md-toolbar-tools-bottom(layout='row')
        h3.md-display-1  Reset Password
    div(layout='column', layout-fill, layout-margin, layout-padding)
      div(layout='row', layout-fill='', layout-margin='')
        p.md-body-2 Enter your email so we can send you a reset link
      form(name='resetForm', layout='column', layout-fill='', layout-padding='', layout-margin='')
        md-input-container
          label  Email 
          input(type='text', ng-model='password.credentials.email', placeholder='email', aria-label='email', required='')
        div(layout='row', layout-align='end center')
          md-button.md-raised.md-primary(ng-click='password.reset()', aria-label='reset', ng-disabled='password.resetForm.$invalid()')
            | Send Email
      md-toolbar.md-warn(ng-show='password.error', layout='row', layout-fill='', layout-padding='', layout-margin='')
        p.md-body-1 {{ password.error }}
      md-divider
      div(layout='row', layout-align='center')
        a.md-button(ui-sref='misas.login') Sign in
